---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import Button from "@components/common/Button.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, button } = entry.data;
---

<!-- Mantén tu BaseLayout normal -->
<BaseLayout>
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-6">

          {image && (
            <div class="blur-[0px] mb-6">
              <Image
                class="mx-auto w-64 rounded-lg"
                src={image}
                alt={imageAlt}
                width={1024}
                height={1024}
                loading="eager"
              />
            </div>
          )}

          <!-- Solo la tarjeta tiene fondo translúcido -->
          <div class="backdrop-blur-md rounded-lg p-8 mx-auto text-left" style="background-color: rgba(255,255,255,0.2);">
            <h1 set:html={markdownify(title)} class="mb-6 text-center" />

            {content.split("\n\n").map((parrafo) => (
              <p class="mb-4">{parrafo}</p>
            ))}

            {button && (
              <div class="mt-6 text-center">
                <Button
                  label={button.label}
                  link={button.link}
                  newtab
                  hoverInvert
                  color=""
                />
              </div>
            )}
          </div>

        </div>
      </div>
    </div>
  </section>
</BaseLayout>
