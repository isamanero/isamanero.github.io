---
import type { DocsEntry } from "@/types";
import { Image } from "astro:assets";

interface Props {
  entry: DocsEntry;
}

const { entry } = Astro.props;
const { title, image, imageAlt, description } = entry.data;
---

<div class="flex flex-col lg:flex-row gap-4 m-4">
  <!-- Panel izquierdo de acceso rápido -->
  <aside class="lg:w-1/4 bg-gray-100 dark:bg-gray-800 rounded-lg p-4 sticky top-4 h-fit">
    <h3 class="font-bold mb-2">Acceso rápido</h3>
    <ul class="space-y-1 text-sm">
      <li><a href="#seccion1" class="text-blue-500 hover:underline">Sección 1</a></li>
      <li><a href="#seccion2" class="text-blue-500 hover:underline">Sección 2</a></li>
      <li><a href="#seccion3" class="text-blue-500 hover:underline">Sección 3</a></li>
    </ul>
  </aside>

  <!-- Contenido principal -->
  <main class="flex-1 flex flex-col gap-4">
    <!-- Foto principal -->
    {image && (
      <Image
        src={image}
        alt={imageAlt}
        width={1280}
        height={720}
        class="rounded-lg object-cover w-full h-auto"
        loading="eager"
      />
    )}

    <!-- Título del proyecto -->
    <h1 class="text-2xl font-bold mt-2">{title}</h1>

    <!-- Recuadro traslúcido con descripción -->
    {description && (
      <div class="bg-white/20 backdrop-blur-md rounded-lg p-4 mt-2">
        <div 
          class="prose prose-sm text-gray-900 dark:text-gray-100"
          set:html={description}
        ></div>
      </div>
    )}
  </main>
</div>
